<script>
document.addEventListener('click', function(event) {
    const sidebar = document.getElementById('mobileSidebar');
    const button = document.querySelector('[data-bs-target="#mobileSidebar"]');
    if (button.contains(event.target)) {
        return;
    }
    if (sidebar.classList.contains('show') && !sidebar.contains(event.target)) {
        const bsCollapse = bootstrap.Collapse.getInstance(sidebar);
        if (bsCollapse) bsCollapse.hide();
    }
});
</script>
<script>
document.getElementById("searchForm").addEventListener("submit", function(e) {
    e.preventDefault();

    const query = document.getElementById("searchInput").value.trim();
    if (!query) return;

    let type = "";

    const path = window.location.pathname.toLowerCase();

    if (path.includes("/locations")) type = "location";
    else if (path.includes("/banks")) type = "banks";
    else if (path.includes("/properties")) type = "properties";
    else if (path.includes("/agents")) type = "agent";
    else if (path.includes("/amenities")) type = "amenities";
    else if (path.includes("/open-leads")) type = "open-leads";
    else if (path.includes("/closed-leads")) type = "closed-leads";
    else if (path.includes("/lost-leads")) type = "lost-leads";

    if (!type) {
        const params = new URLSearchParams(window.location.search);
        type = params.get("type") || "";
    }

    window.location.href = `/search?type=${type}&query=${encodeURIComponent(query)}`;
});
</script>
