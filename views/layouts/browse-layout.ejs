<body class="browse-main">
<div class="container-fluid">
    <div class="row">
        <nav id="sidebar" class="col-lg-3 col-md-4 d-none d-md-block color-white sidebar p-3" style="background-color: #232528;">
            <%- include('../partials/sidebar_filter.ejs') %>
        </nav>

        <main id="main-content" class="col-lg-9 col-md-8 col-12 p-0">
            <%- include('../partials/header-browse.ejs') %>

            <div class="d-md-none mb-3 ms-3">
                <button class="btn btn-primary w-10 mt-2" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileSidebar">
                    â˜° Filter
                </button>
            </div>
            <div class="offcanvas offcanvas-start" style="background-color: #232528;" tabindex="-1" id="mobileSidebar">
                <div class="offcanvas-header" style="background-color: #232528;">
                    <h5 class="text-white">Filter</h5>
                    <button type="button" class="btn-close text-reset bg-white" data-bs-dismiss="offcanvas"></button>
                </div>
                <div class="offcanvas-body color-white" style="background-color: #232528;">
                    <%- include('../partials/sidebar_filter.ejs') %>
                </div>
            </div>
            <main class="pt-lg-5 pt-md-0 pt-0" style="padding-top:0 !important;">
                <%- body %>
            </main>
        </main>
    </div>
</div>



<!-- Scripts -->
<script src="assets/js/jquery.min.js"></script>
