<style>
    .clip-item img {
  width: 400px;
  height: 200px;
  object-fit: cover;
}

</style>
<body class="compare-page">
  <div id="page_wrapper" class="bg-light-gray">
    <!--============== Page Banner Section Start ==============-->
    <div class="full-row inner-page-banner">
      <div class="container">
        <div class="row">
          <div class="col">
            <div class="page-title-wrapper d-lg-flex flex-column gap-3">
              <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent p-0">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/browse">Browse</a></li>
                  <li class="breadcrumb-item active" aria-current="page">Compare</li>
                </ol>
              </nav>
              <h1 class="page-title">Compare Properties</h1>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!--=============== Page Banner Section End ===============-->

    <!--================ Compare section Start ================-->
    <div class="full-row pt-0">
      <div class="container">
        <% if (compare && compare.properties && compare.properties.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped compare-list-properties align-middle text-center">
            <tbody>
              <!-- ==== Property Headers ==== -->
              <tr>
                <th></th>
                <% compare.properties.forEach(property => { %>
                  <th>
                    <div class="clip-item">
                      <div class="position-relative">
                        <img src="<%= property.mainImage || '/assets/images/landing_bg.png' %>" 
                             alt="<%= property.propertyName %>" 
                             class="img-fluid rounded ">
                      </div>
                      <div class="text-center my-4">
                        <h5 class="color-secondary"><%= property.propertyName %></h5>
                        <span class="color-primary">₹<%= property.priceFromInNumber %></span><br>
                        <small class="text-muted"><%= property.propertyType %> - <%= property.propertyStatus %></small>
                      </div>
                    </div>
                  </th>
                <% }) %>
              </tr>

              <!-- ==== Compare Fields ==== -->
              <tr>
                <td><strong>Location</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.location || '-' %></td>
                <% }) %>
              </tr>

              <tr>
                <td><strong>Area (sqft)</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.areaSquareFeetFrom || '-' %></td>
                <% }) %>
              </tr>

              <tr>
                <td><strong>Year of Construction</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.yearsOfConstruction || '-' %></td>
                <% }) %>
              </tr>

              <tr>
                <td><strong>BHK</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.additionalInfo || '-' %></td>
                <% }) %>
              </tr>

              <tr>
                <td><strong>Posted On</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.createdAt ? p.createdAt.toDateString() : '-' %></td>
                <% }) %>
              </tr>

              <tr>
                <td><strong>Property Status</strong></td>
                <% compare.properties.forEach(p => { %>
                  <td><%= p.listingStatus || '-' %></td>
                <% }) %>
              </tr>
            </tbody>
          </table>
        </div>
        <% } else { %>
          <p class="text-center mt-5 fs-5">No properties selected for comparison.</p>
        <% } %>
      </div>
    </div>
    <!--================= Compare section End =================-->

    <!--============== Copyright Section Start ==============-->
    <div class="copyright font-primary py-3">
      <div class="container">
        <div class="row row-cols-md-2 row-cols-1">
          <div class="col">
            <p class="color-white mb-0">©2025 Uniland All rights reserved</p>
          </div>
          <div class="col">
            <ul class="bottom-footer-nav list-color-gray">
              <li><a href="#">Privacy & Policy</a></li>
              <li>|</li>
              <li><a href="#">Site Map</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!--================= Copyright Section End =================-->
  </div>

  <!-- Scroll to top -->
  <div class="scroll-top-vertical xs-mx-none" id="scroll">
    Back to top <i class="ms-2 fa-solid fa-arrow-right-long"></i>
  </div>
</body>
