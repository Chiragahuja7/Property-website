<style>
        table {
            border-collapse: collapse;
            width: 95%;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
<body>
<!--============== Dashboard Start ==============-->
<div class="full-row p-3">
    <div class="container-fluid">
        <div class="row align-items-center mb-3">
            <div class="col-auto">
                <h5 class="mb-0 color-dark">Agents</h5>
            </div>
            <div class="col-auto ms-auto">
                <a href="addagent" class="btn btn-primary">
                    Add Agent
                </a>
            </div>
        </div>

<form action="/search" method="get" class="d-flex" id="searchForm">
  <input id="searchInput" name="query" type="search" class="form-control" placeholder="Search..." required>
  <input type="hidden" name="type" value="agents" id="searchType">
  <button type="submit" class="btn btn-primary ms-2">Search</button>
</form>

    </div>
</div>
<div class="table-responsive">
<table>
     <thead>
          <tr>
         <th>S.No</th>
         <th>Name</th>
         <th>Location</th>
         <th>Status</th>
         <th>Action</th>
         </tr>
    </thead>
    <tbody id="paginated-container">
    <% myagents.forEach((agent, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td><%= agent.name %></td>
            <td><%= agent.location %></td>
            <td><%= agent.status %></td>
            <td class="d-flex gap-3 justify-content-center">
                <a href="/editagent/<%= agent._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href="#" data-bs-toggle="modal" data-bs-target="#agentDeleteModal-<%= agent._id %>">
                <i class="fa-solid fa-trash text-danger"></i></a>
            </td>
        </tr>
<div class="modal fade" id="agentDeleteModal-<%= agent._id %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content text-center p-3 rounded">
      <div class="modal-body">
        <h5 class="mb-3">Are you sure you want to Delete?</h5>
        <div class="d-flex justify-content-center gap-3">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/deleteagent/<%= agent._id %>" class="btn btn-danger">Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>
<% }); %>
</tbody>
</table>
</div>
<%- include('../partials/pagination') %>

