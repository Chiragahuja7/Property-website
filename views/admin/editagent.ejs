<div class="page-title-wrapper d-lg-flex flex-column gap-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-0 bg-transparent p-0">
      <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/agents">Agents</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit Agent</li>
    </ol>
  </nav>
  <h1 class="page-title">Edit Agent</h1>
</div>
<br><br>
<div class="full-row pt-0">
  <div class="container">
    <div class="row g-5">
      <div class="col-lg-12">
        <div class="contact-form">
          <form  method="POST" id="editagent" action="/editagent/<%= agent._id %>">
            <div class="row align-items-center mb-3">
              <div class="col-lg-6">
                <label class="mb-0 color-dark">Name of Agent</label>
                <input type="text" class="form-control text-dark" name="agent" value="<%= agent.name %>"required>      
              </div>
              <div class="col-lg-6">
                <label>Email</label>
                <input type="email" class="form-control text-dark" name="email" value="<%= agent.email %>" required>
              </div>
              <div class="col-lg-6">
                <label>location</label>
                <select class="form-select text-dark" name="location" value="<%= agent.location %>" required>
                 <option class="text-dark" value="">-- Select Location --</option>
                 <% mylocation.forEach(loc => { %>
                 <option class="text-dark" value="<%= loc.location %>" 
                 <%= agent.location === loc.location ? "selected" : "" %>>
                 <%= loc.location %>
                 </option>
                 <% }) %>
               </select>
              </div>
              <div class="col-lg-6">
                <label>Status</label>
                <select class="form-select text-dark" name="status" required>
                <% if (mydata && mydata.default.AGENT_STATUS) { %>
                <% mydata.default.AGENT_STATUS.forEach(function(status) { %>
                  <option class="text-dark" value="<%= status %>" <%= agent.status == status ? "selected" : "" %>>
                    <%= status %>
                  </option>
                   <% }) %>
                   <% } %>
              </select>
              </div>
              <div class="col-lg-6">
                <label>Phone No</label>
                <input type="number" class="form-control text-dark" name="contact"  value="<%= agent.contact %>" required>
              </div>
              <div class="col-lg-12 mt-3">
                <button type="submit" class="btn btn-primary">
                  Update Agent
                </button>
              </div>
            </div>
          </form>
          <script>
            document.getElementById("editagent").addEventListener("submit", async function (e) {
              e.preventDefault();

              const formData = {
                name: this.agent.value,
                email:this.email.value,
                contact:this.contact.value,
                location:this.location.value,
                status:this.status.value
              };

              try {
                const res = await fetch(`/editagent/<%= agent._id %>`, {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify(formData)
                });

                const data = await res.json();
                if (data.success) {
                  alert("Agent updated! ✅");
                  window.location.href = "/agents";
                } else {
                  alert("Something went wrong ❌");
                }
              } catch (err) {
                console.error(err);
                alert("Server error!");
              }
            });
          </script>
        </div>
      </div>
    </div>
  </div>
</div>
