     <div class="full-row pt-0">
  <div class="container">
    <div class="row g-5">
      <div class="col-md-5 order-md-2"></div>
      <div id="agentcall" class="col-lg-7">
        <div class="contact-form">
          <form method="POST" id="addagent">
            <div class="row g-3">
              <div class="col-lg-6">
                <label>Name</label>
                <input type="text" class="form-control" name="name" required>
              </div>
              <div class="col-lg-6">
                <label>Email</label>
                <input type="email" class="form-control" name="email" required>
              </div>
              <div class="col-lg-12">
                <label>location</label>
                <input type="text" class="form-control" name="location" required>
              </div>
              <div class="col-lg-12">
                <label>Phone No</label>
                <input type="tel" class="form-control" name="contact" required>
              </div>
              <div class="col-lg-12">
                <label>Password</label>
                <input type="text" class="form-control" name="password" required>
              </div>
              <div class="col-lg-12">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>

          <script>
            document.getElementById("addagent").addEventListener("submit", async function (e) {
              e.preventDefault();

              const formData = {
                name: this.name.value,
                email: this.email.value,
                contact: this.contact.value,
                password: this.password.value,
                location: this.location.value
              };

              try {
                const res = await fetch("/addagent", {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify(formData)
                });

                const data = await res.json();
                if (data.success) {
                  alert("Your request has been saved! ✅");
                  this.reset();
                } else {
                  alert("Something went wrong ❌");
                }
              } catch (err) {
                console.error(err);
                alert("Server error!");
              }
            });
          </script>
        </div>
      </div>
    </div>
