<div class="page-title-wrapper d-lg-flex flex-column gap-3">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb mb-0 bg-transparent p-0">
      <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
      <li class="breadcrumb-item"><a href="/leads">Leads</a></li>
      <li class="breadcrumb-item"><a href="/open-leads">Open-leads</a></li>
      <li class="breadcrumb-item active" aria-current="page">Edit lead</li>
    </ol>
  </nav>
  <h1 class="page-title">Edit Lead</h1>
</div>

<br><br>

<div class="full-row pt-0">
  <div class="container">
    <div class="row g-5">
      <div class="col-lg-7">
        <div class="contact-form">

          <form method="POST" id="editlead" action="/editlead/<%= mycalls._id %>">
            <div class="row align-items-center mb-3">

              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Name:</label>
                <h7 class="mb-0 text-dark"> <%= mycalls.name %></h7>     
              </div>
              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Contact:</label>
                <h7 class="mb-0 text-dark"> <%= mycalls.contact %></h7>     
              </div>
              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Address:</label>
                <h7 class="mb-0 text-dark"> <%= mycalls.address %></h7>     
              </div>
              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Email:</label>
                <h7 class="mb-0 text-dark"> <%= mycalls.email %></h7>     
              </div>
              <%if(user.isAdmin){%>
              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Assign To Agent</label>
                <select name="assignedAgent" class="form-control form-select">
                  <option class="text-dark" value="">-- Select Agent --</option>
                  <% agents.forEach(function(agent) { %>
                    <option class="text-dark" value="<%= agent.name %>" <%= mycalls.assignedAgent === agent.name ? "selected" : "" %>>
                      <%= agent.name %>
                    </option>
                  <% }) %>
                </select>
              </div>
              <%}%>
              <div class="col-lg-6 mb-3">
                <label class="mb-0 color-dark">Lead Status</label>
                <select name="leadStatus" class="form-select" required>
                  <option class="text-dark" value="open" <%= mycalls.leadStatus === 'open' ? 'selected' : '' %>>Open</option>
                  <option class="text-dark" value="closed" <%= mycalls.leadStatus === 'closed' ? 'selected' : '' %>>Closed</option>
                  <option class="text-dark" value="lost" <%= mycalls.leadStatus === 'lost' ? 'selected' : '' %>>Lost</option>
                </select>
              </div>
              <div class="col-lg-12 mt-3">
                <button type="submit" class="btn btn-primary w-100">
                  Update Lead
                </button>
              </div>
            </div>
          </form>
          <script>
            document.getElementById("editlead").addEventListener("submit", async function (e) {
              e.preventDefault();

              const formData = {
                name: this.name.value,
                assignedAgent: this.assignedAgent.value,
                leadStatus: this.leadStatus.value
              };

              try {
                const res = await fetch(`/editlead/<%= mycalls._id %>`, {
                  method: "POST",
                  headers: { "Content-Type": "application/json" },
                  body: JSON.stringify(formData)
                });

                const data = await res.json();
                if (data.success) {
                  alert("Lead updated successfully ✅");
                  window.location.href = "/leads";
                } else {
                  alert("Something went wrong ❌");
                }
              } catch (err) {
                console.error(err);
                alert("Server error!");
              }
            });
          </script>

        </div>
      </div>
    </div>
  </div>
</div>
