<style>
        table {
            border-collapse: collapse;
            width: 95%;
            margin: 20px auto;
        }
        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: center;
        }
        th {
            background-color: #f2f2f2;
        }
    </style>
<body>
<!--============== Dashboard Start ==============-->
<div class="full-row p-3">
    <div class="container-fluid">
        <div class="row align-items-center mb-3">
            <div class="col-auto">
                <h5 class="mb-0 color-dark">Banks</h5>
            </div>
            <div class="col-auto ms-auto">
                <a href="addbank" class="btn btn-primary">
                    Add Bank
                </a>
            </div>
        </div>
        <form class="d-flex mb-3" role="search" id="searchForm">
        <input class="form-control me-2" type="search" id="searchInput" placeholder="Search..." aria-label="Search">
        <button class="btn btn-primary" type="submit">Search</button>
        </div>
</div>

<table>
     <thead>
          <tr>
         <th>S.No</th>
         <th>Logo</th>
         <th>Name</th>
         <th>Action</th>
         </tr>
    </thead>
    <tbody id="paginated-container">
    <% mybanks.forEach((bank, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td>
            <img src="<%= bank.upload %>" alt="<%= bank.name %> Logo" width="80" height="40" style="object-fit:contain;">
            </td>
            <td><%= bank.name %></td>
            <td class="d-flex gap-5 justify-content-center mt-2">
                <a href="/deletebanks/<%= bank._id %>" 
                 onclick="return confirm('Are you sure you want to delete this bank');">
                <i class="fa-solid fa-trash text-danger"></i></a>
            </td>
        </tr>
    <% }); %>
</tbody>
</table>
<%- include('../partials/pagination') %>
